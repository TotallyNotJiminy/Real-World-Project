<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_personal_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fappnation.myfoodapplication.PersonalDetails">

    <Spinner
        android:layout_marginTop="85dp"
        android:id="@+id/spinner2"
        android:layout_height="30dp"
        android:layout_width="150dp"
        android:spinnerMode="dropdown"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_height="30dp"
        android:layout_width="150dp"
        android:spinnerMode="dropdown"
        android:layout_alignBaseline="@+id/spinner2"
        android:layout_alignBottom="@+id/spinner2"
        android:layout_toEndOf="@+id/spinner2"
        android:layout_marginStart="21dp" />

    <Spinner
        android:layout_marginTop="72dp"
        android:id="@+id/spinner6"
        android:layout_height="30dp"
        android:layout_width="150dp"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/spinner3"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Enter Your Weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/spinner3"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp"
        android:id="@+id/textView9"
        android:textSize="24sp" />

    <TextView
        android:text="Enter Your Height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textSize="24sp"
        android:layout_below="@+id/spinner3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <Spinner
        android:id="@+id/spinner5"
        android:layout_height="30dp"
        android:layout_width="150dp"
        android:spinnerMode="dropdown"
        android:layout_alignBaseline="@+id/spinner6"
        android:layout_alignBottom="@+id/spinner6"
        android:layout_alignStart="@+id/spinner3" />

    <Spinner
        android:id="@+id/spinner7"
        android:layout_height="30dp"
        android:layout_width="150dp"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/spinner5"
        android:layout_toStartOf="@+id/spinner5"
        android:layout_marginTop="122dp" />

    <TextView
        android:text="How Active are you"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:textSize="24sp"
        android:layout_width="250dp"
        android:layout_marginBottom="52dp"
        android:layout_alignBottom="@+id/spinner7"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Proceed"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="43dp"
        android:id="@+id/Proceed2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_green_light" />

    <TextView
        android:text="Personal Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:textStyle="normal|bold"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_green_light" />
</RelativeLayout>
